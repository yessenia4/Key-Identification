<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:padding="1dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:text="@string/match_text"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:fontFamily="@font/arlrdbd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/keymatch_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        app:layout_constraintTop_toBottomOf="@id/match" />

    <TextView
        android:id="@+id/keymatch_name"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:fontFamily="@font/arlrdbd"
        app:layout_constraintEnd_toEndOf="@id/keymatch_image"
        app:layout_constraintTop_toBottomOf="@id/match" />

    <TextView
        android:id="@+id/keymatch_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:fontFamily="@font/arlrdbd"
        app:layout_constraintEnd_toEndOf="@id/keymatch_image"
        app:layout_constraintTop_toBottomOf="@id/keymatch_name"/>

</android.support.constraint.ConstraintLayout>